<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.Login.LoginMenu"
            prefHeight="400.0" prefWidth="600.0">

    <center>
        <VBox alignment="CENTER" spacing="20">
            <Label text="welcome!" id="label"/>
            <TextField promptText="username" maxWidth="300" fx:id="username" />
            <PasswordField promptText="password" maxWidth="300" fx:id="password" />
            <HBox alignment="CENTER" spacing="20">
                <Button text="login" onMouseClicked="#submit"/>
                <Button text="reset" onMouseClicked="#reset"/>
                <Button text="back" onMouseClicked="#back"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
