<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.ProfileMenu.ProfileMenu"
            prefHeight="400.0" prefWidth="600.0">
    <center>
        <VBox alignment="CENTER" spacing="20">
            <Button text="change username" onMouseClicked="#changeUsername"/>
            <Button text="change password" onMouseClicked="#changePassword"/>
            <Button text="logout" onMouseClicked="#logout"/>
            <Button text="remove account" onMouseClicked="#removeAccount"/>

            <Button text="back" onMouseClicked="#back"/>

        </VBox>
    </center>

</BorderPane>
